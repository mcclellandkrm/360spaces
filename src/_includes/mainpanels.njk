<script>
// Mouse-follow glow effect for all main panels
function addMainPanelGlow(panelId, glowId) {
  const panel = document.getElementById(panelId);
  const glow = document.getElementById(glowId);
  if(panel && glow) {
    panel.addEventListener('mousemove', function(e) {
      const rect = panel.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      glow.style.setProperty('--x', `${x}px`);
      glow.style.setProperty('--y', `${y}px`);
    });
    panel.addEventListener('mouseleave', function() {
      glow.style.setProperty('--x', `50%`);
      glow.style.setProperty('--y', `50%`);
    });
  }
}
addMainPanelGlow('mainpanel-1', 'mainpanel-glow-1');
addMainPanelGlow('mainpanel-2', 'mainpanel-glow-2');
addMainPanelGlow('mainpanel-3', 'mainpanel-glow-3');
addMainPanelGlow('mainpanel-4', 'mainpanel-glow-4');
</script>
