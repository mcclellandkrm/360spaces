<script>
    // Enhanced mouse-follow glow effect for luxury main panels
    function addLuxuryMainPanelGlow(panelId, glowId) {
        const panel = document.getElementById(panelId);
        const glow = document.getElementById(glowId);
        if (panel && glow) {
            panel.addEventListener('mousemove', function (e) {
                const rect = panel.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                glow.style.setProperty('--x', `${x}px`);
                glow.style.setProperty('--y', `${y}px`);
                glow.style.opacity = '1';
            });
            panel.addEventListener('mouseleave', function () {
                glow.style.setProperty('--x', `50%`);
                glow.style.setProperty('--y', `50%`);
                glow.style.opacity = '0.6';
            });
        }
    }
    // Initialize all luxury main panel glows
    addLuxuryMainPanelGlow('mainpanel-1', 'mainpanel-glow-1');
    addLuxuryMainPanelGlow('mainpanel-2', 'mainpanel-glow-2');
    addLuxuryMainPanelGlow('mainpanel-3', 'mainpanel-glow-3');
    addLuxuryMainPanelGlow('mainpanel-4', 'mainpanel-glow-4');
</script>