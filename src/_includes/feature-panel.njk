<script>
// Mouse-follow glow effect for all feature panels
function addPanelGlow(panelId, glowId) {
  const panel = document.getElementById(panelId);
  const glow = document.getElementById(glowId);
  if(panel && glow) {
    panel.addEventListener('mousemove', function(e) {
      const rect = panel.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      glow.style.setProperty('--x', `${x}px`);
      glow.style.setProperty('--y', `${y}px`);
    });
    panel.addEventListener('mouseleave', function() {
      glow.style.setProperty('--x', `50%`);
      glow.style.setProperty('--y', `50%`);
    });
  }
}
addPanelGlow('feature-panel', 'feature-panel-glow');
addPanelGlow('feature-panel-2', 'feature-panel-glow-2');
addPanelGlow('feature-panel-3', 'feature-panel-glow-3');
</script>
