<section id="contact-form-section" class="luxury-contact-section">
    <div class="luxury-contact-container">
        <div class="luxury-contact-content">
            <div class="luxury-contact-header">
                <h2 class="luxury-contact-heading">Ready for a New 360 View?</h2>
                <p class="luxury-contact-description">Together we'll find out the best solutions.</p>
            </div>
            <form class="luxury-contact-form" autocomplete="off">
                <div class="luxury-form-grid">
                    <div class="luxury-input-group">
                        <input type="text" name="full-name" id="full-name" required class="luxury-input">
                        <label for="full-name" class="luxury-label">Full Name *</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-input-group">
                        <input type="email" name="email" id="email" required class="luxury-input">
                        <label for="email" class="luxury-label">Email Address *</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-input-group">
                        <input type="tel" name="phone" id="phone" required class="luxury-input">
                        <label for="phone" class="luxury-label">Phone Number *</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-input-group">
                        <input type="text" name="location" id="location" required class="luxury-input">
                        <label for="location" class="luxury-label">Location *</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-input-group luxury-select-group">
                        <select name="referral" id="referral" required class="luxury-select">
                            <option value="" disabled selected></option>
                            <option value="Google Ads/Search">Searching online</option>
                            <option value="Instagram">Instagram/Facebook</option>
                            <option value="LinkedIn">LinkedIn</option>
                            <option value="Referral">Referral</option>
                            <option value="Other">Other</option>
                        </select>
                        <label for="referral" class="luxury-label">How did you find us? *</label>
                        <div class="luxury-input-line"></div>
                        <div class="luxury-select-arrow">
                            <svg width="12" height="8" viewbox="0 0 12 8" fill="none">
                                <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                    </div>
                    <div class="luxury-input-group luxury-full-width">
                        <input type="text" name="company" id="company" required class="luxury-input">
                        <label for="company" class="luxury-label">Company Name *</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-input-group luxury-select-group luxury-full-width">
                        <select name="budget" id="budget" required class="luxury-select">
                            <option value="" disabled selected></option>
                            <option value="to £5K">to £5K</option>
                            <option value="£5K - £10K">£5K - £10K</option>
                            <option value="£10K - £25K">£10K - £25K</option>
                            <option value="£25K - £50K">£25K - £50K</option>
                            <option value="£50K+">£50K+</option>
                        </select>
                        <label for="budget" class="luxury-label">Investment Range</label>
                        <div class="luxury-input-line"></div>
                        <div class="luxury-select-arrow">
                            <svg width="12" height="8" viewbox="0 0 12 8" fill="none">
                                <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                    </div>
                    <div class="luxury-input-group luxury-full-width">
                        <textarea name="message" id="message" class="luxury-textarea" rows="4"></textarea>
                        <label for="message" class="luxury-label">Tell us about your project</label>
                        <div class="luxury-input-line"></div>
                    </div>
                    <div class="luxury-checkbox-group luxury-full-width">
                        <div class="luxury-checkbox-header">
                            <span class="luxury-checkbox-title">How can we help you? *</span>
                        </div>
                        <div class="luxury-checkbox-options">
                            <label class="luxury-checkbox">
                                <input type="checkbox" name="help[]" value="Branding">
                                <span class="luxury-checkbox-mark"></span>
                                <span class="luxury-checkbox-text">Branding</span>
                            </label>
                            <label class="luxury-checkbox">
                                <input type="checkbox" name="help[]" value="Design">
                                <span class="luxury-checkbox-mark"></span>
                                <span class="luxury-checkbox-text">Design</span>
                            </label>
                            <label class="luxury-checkbox">
                                <input type="checkbox" name="help[]" value="Development">
                                <span class="luxury-checkbox-mark"></span>
                                <span class="luxury-checkbox-text">Development</span>
                            </label>
                        </div>
                    </div>
                    <div class="luxury-submit-group luxury-full-width">
                        <button type="submit" class="luxury-submit-btn">
                            <span class="luxury-btn-text">Get Started Now</span>
                            <span class="luxury-btn-arrow">
                                <svg width="20" height="20" viewbox="0 0 20 20" fill="none">
                                    <path
                                        d="M4.16663 10H15.8333M15.8333 10L10.8333 5M15.8333 10L10.8333 15"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"/>
                                </svg>
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>